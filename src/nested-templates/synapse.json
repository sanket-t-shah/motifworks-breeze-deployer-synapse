{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "breezeTagValues": {
      "type": "object"
    },
    "breezeSynapseWorkspaceName": {
      "type": "string"
    },
    "breezeSynapseSqlPoolDedicatedSku": {
      "type": "string"
    },
    "breezeSynapseAdminUsername": {
      "type": "string"
    },
    "breezeSynapseAdminPassword": {
      "type": "securestring"
    },
    "breezeResourceGroupName": {
      "type": "string"
    },
    "breezeSynapseStorageAccountName": {
      "type": "string"
    },
    "breezeSynapseAdministratorUserGuid": {
      "type": "string"
    }
  },
  "variables": {
    "breezeSynapseManagedResourceGroup": "[format('syn-mrg-{0}', parameters('breezeResourceGroupName'))]",
    "breezeSynapseWorkspaceSqlPoolName": "[format('{0}/syndpbreeze', parameters('breezeSynapseWorkspaceName'))]",
    "breezeGuidSynapseWorkspace": "[guid(resourceId('Microsoft.Storage/storageAccounts', parameters('breezeSynapseStorageAccountName')), parameters('breezeSynapseWorkspaceName'))]",
    "breezeGuidBreezeSynapseAdministrator": "[guid(resourceId('Microsoft.Storage/storageAccounts', parameters('breezeSynapseStorageAccountName')), parameters('breezeSynapseAdministratorUserGuid'))]",
    "storageBlobDataContributorRoleID": "ba92f5b4-2d11-453d-a403-e96b0029c9fe"
  },
  "resources": [
    {
      "type": "Microsoft.Synapse/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[parameters('breezeSynapseWorkspaceName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('breezeTagValues')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "defaultDataLakeStorage": {
          "accountUrl": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('breezeSynapseStorageAccountName')), '2022-09-01').primaryEndpoints.dfs]",
          "filesystem": "[parameters('breezeSynapseWorkspaceName')]"
        },
        "sqlAdministratorLogin": "[parameters('breezeSynapseAdminUsername')]",
        "sqlAdministratorLoginPassword": "[parameters('breezeSynapseAdminPassword')]",
        "managedResourceGroupName": "[variables('breezeSynapseManagedResourceGroup')]",
        "publicNetworkAccess": "Enabled",
        "trustedServiceBypassEnabled": true,
        "managedVirtualNetwork": "default"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/sqlPools",
      "apiVersion": "2021-06-01",
      "name": "[variables('breezeSynapseWorkspaceSqlPoolName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "location": "[parameters('location')]",
      "tags": "[parameters('breezeTagValues')]",
      "sku": {
        "name": "[parameters('breezeSynapseSqlPoolDedicatedSku')]"
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "createMode": "Default"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/firewallRules",
      "apiVersion": "2021-06-01",
      "name": "[format('{0}/{1}', parameters('breezeSynapseWorkspaceName'), 'allowAll')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/firewallRules",
      "apiVersion": "2021-06-01",
      "name": "[format('{0}/{1}', parameters('breezeSynapseWorkspaceName'), 'AllowAllWindowsAzureIps')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/managedIdentitySqlControlSettings",
      "apiVersion": "2021-06-01",
      "name": "[format('{0}/{1}', parameters('breezeSynapseWorkspaceName'), 'default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "properties": {
        "grantSqlControlToManagedIdentity": {
          "desiredState": "Enabled"
        }
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/sqlPools/metadataSync",
      "apiVersion": "2021-06-01",
      "name": "[format('{0}/{1}/{2}', split(variables('breezeSynapseWorkspaceSqlPoolName'), '/')[0], split(variables('breezeSynapseWorkspaceSqlPoolName'), '/')[1], 'config')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces/sqlPools', split(variables('breezeSynapseWorkspaceSqlPoolName'), '/')[0], split(variables('breezeSynapseWorkspaceSqlPoolName'), '/')[1])]"
      ],
      "properties": {
        "enabled": true
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "scope": "[format('Microsoft.Storage/storageAccounts/{0}', parameters('breezeSynapseStorageAccountName'))]",
      "name": "[variables('breezeGuidSynapseWorkspace')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "properties": {
        "principalId": "[reference(resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName')), '2021-06-01', 'full').identity.principalId]",
        "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('storageBlobDataContributorRoleID'))]",
        "principalType": "ServicePrincipal"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "scope": "[format('Microsoft.Storage/storageAccounts/{0}', parameters('breezeSynapseStorageAccountName'))]",
      "name": "[variables('breezeGuidBreezeSynapseAdministrator')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', parameters('breezeSynapseWorkspaceName'))]"
      ],
      "properties": {
        "principalId": "[parameters('breezeSynapseAdministratorUserGuid')]",
        "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('storageBlobDataContributorRoleID'))]",
        "principalType": "User"
      }
    }
  ]
}